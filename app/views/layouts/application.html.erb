<!DOCTYPE html>
<html>
  <head>
    <title>Argus</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="header">
    <div class="container">
      <%= link_to(root_path) do %>
          <h1><span class="dark"></span>Home</h1>
      <% end %>

      <div class="nav">

        <% if current_user %>
            <ul>
              <li><%= current_user.email %></li>
              <% if admin? %>
                  <li><%= link_to "Admin", admin_root_path, method: "get" %></li>
              <% end %>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
        <% else %>
            <ul>
              <li><%= link_to "Login", login_path, method: "get" %></a></li>
              <li><%= link_to "Signup", 'signup' %></a></li>
            </ul>
        <% end %>


      </div>
    </div>
  </div>

    <%= yield %>
  </body>
</html>
